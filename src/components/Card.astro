---
interface Props {
  title: string;
  description: string;
  icon?: string;
  className?: string;
}

const { title, description, icon, className = "" } = Astro.props;
---

<div class={`bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden ${className}`}>
  <div class="p-6">
    {icon && <span class="text-2xl mb-4 block">{icon}</span>}
    <h3 class="text-xl font-bold text-lexpressed-blue mb-3">{title}</h3>
    <p class="text-gray-600">{description}</p>
  </div>
</div>